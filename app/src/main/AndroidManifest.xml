<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gianlu.aria2android">

    <!-- You know... -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Save downloads -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Google Analytics -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Start service on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".ThisApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- aria2 service -->
        <service
            android:name=".Aria2.BinService"
            android:enabled="true" />

        <!-- Preferences Activity -->
        <activity
            android:name=".PreferencesActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Logs Activity -->
        <activity
            android:name="com.gianlu.commonutils.LogsActivity"
            android:parentActivityName=".PreferencesActivity" />

        <!-- Download bin Activity -->
        <activity android:name=".DownloadBinActivity" />

        <!-- Custom options editor Activity -->
        <activity
            android:name=".ConfigEditorActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Boot completed receiver -->
        <receiver
            android:name=".BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>